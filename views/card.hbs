<h1>Card</h1>
<div id="card">

    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название курса</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td><button class="btn btn-small js-remove" data-id="{{_id}}">Удалить</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
        <button class="btn" type="submit">Сделать заказ</button>
    </form>
    {{else}}
    {{/if}}
</div>